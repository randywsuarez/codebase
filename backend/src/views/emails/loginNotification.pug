doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title= t('loginNotification.title')
    style.
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .header {
        background-color: #f39c12;
        color: white;
        padding: 20px;
        text-align: center;
        border-radius: 5px 5px 0 0;
      }
      .content {
        padding: 20px;
        border: 1px solid #e0e0e0;
        border-top: none;
        border-radius: 0 0 5px 5px;
      }
      .footer {
        margin-top: 20px;
        font-size: 12px;
        color: #777;
        text-align: center;
      }
      .info-box {
        background-color: #f8f9fa;
        border-left: 4px solid #f39c12;
        padding: 15px;
        margin: 15px 0;
      }
      .device-info {
        margin: 10px 0;
        padding: 10px;
        background-color: #f8f9fa;
        border-radius: 4px;
      }
      .button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #f39c12;
        color: white !important; /* Ensure white text for buttons */
        text-decoration: none;
        border-radius: 5px;
        margin: 15px 0;
      }

  body
    .header
      h1= t('loginNotification.title')
    .content
      p= t('loginNotification.greeting', { firstName: firstName })
      p= t('loginNotification.detectionMessage')
      
      .info-box
        h3= t('loginNotification.detailsTitle')
        .device-info
          strong= t('loginNotification.dateTimeLabel')
          |  #{dateTime}
        .device-info
          strong= t('loginNotification.ipAddressLabel')
          |  #{ipAddress}
        .device-info
          strong= t('loginNotification.deviceLabel')
          |  #{deviceInfo} 
        .device-info
          strong= t('loginNotification.locationLabel')
          |  #{location}
      
      p= t('loginNotification.ifRecognized')
      p= t('loginNotification.ifNotRecognized')
      ul
        li= t('loginNotification.actionChangePassword')
        li= t('loginNotification.actionReviewActivity')
        li= t('loginNotification.actionContactSupport')

      p(style='text-align: center;')
        a.button(href=url)= t('loginNotification.buttonChangePassword')

      p= t('loginNotification.securityRecommendation')
      
      p= t('loginNotification.closing')
      p= t('loginNotification.teamSignature', { appName: appName })

    .footer
      p= t('loginNotification.automatedMessage')
      p= t('loginNotification.copyright', { year: new Date().getFullYear(), appName: appName })
