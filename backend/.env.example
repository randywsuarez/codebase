# Configuración de la aplicación
NODE_ENV=development
PORT=3000

# Configuración de MongoDB
MONGODB_URI=mongodb://localhost:27017/empresa-db

# Configuración de autenticación
JWT_SECRET=tu_clave_secreta_muy_segura_aqui
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Configuración del administrador
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin123!
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=Sistema

# Configuración de correo electrónico (opcional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=tu_usuario_smtp
SMTP_PASS=tu_contraseña_smtp
EMAIL_FROM=noreply@tudominio.com

# Configuración de almacenamiento (opcional)
UPLOAD_PATH=./uploads
MAX_FILE_UPLOAD=10 # MB

# Configuración de CORS
CORS_ORIGIN=http://localhost:3001

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutos
RATE_LIMIT_MAX=100 # Límite de peticiones por ventana de tiempo

# Configuración de logs
LOG_LEVEL=debug
LOG_TO_FILE=true

# Configuración de la API externa (ejemplo)
# API_BASE_URL=https://api.ejemplo.com
# API_KEY=tu_api_key_aqui
